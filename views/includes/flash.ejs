<% if (success && success.length) { %>
  <div class="flash-container">
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <strong class="me-2"><i class="bi bi-check-circle-fill"></i> Success</strong>
      <span class="flash-message"><%= success %></span>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div class="flash-container">
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <strong class="me-2"><i class="bi bi-exclamation-triangle-fill"></i> Error</strong>
      <span class="flash-message"><%= error %></span>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% } %>