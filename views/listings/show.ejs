<% layout('layouts/boilerplate') %>

<div class="show-container">
    <!-- Header Section -->
    <div class="show-header">
        <h1 class="show-title"><%= listing.title %></h1>
        <p class="show-location">
            <i class="fa-solid fa-location-dot"></i>
            <%= listing.location %>, <%= listing.country %>
        </p>
    </div>

    <!-- Image Gallery -->
    <div class="show-image-gallery">
        <img src="<%= listing.image.url %>" alt="<%= listing.title %>">
    </div>

    <!-- Main Content Grid -->
    <div class="listing-details-grid">
        <!-- Left Column - Listing Info -->
        <div class="listing-main-info">
            <!-- Host Info -->
            <div class="listing-host-info">
                <div class="host-avatar">
                    <%= listing.owner.username.charAt(0).toUpperCase() %>
                </div>
                <div class="host-details">
                    <h4>Hosted by <%= listing.owner.username %></h4>
                    <p>Superhost · Joined in 2024</p>
                </div>
            </div>

            <!-- Description -->
            <div class="listing-description">
                <p><%= listing.description %></p>
            </div>

            <!-- Features -->
            <div class="listing-features">
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fa-solid fa-house"></i>
                    </div>
                    <div class="feature-text">
                        <h5>Entire place</h5>
                        <p>You'll have the entire property</p>
                    </div>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fa-solid fa-door-open"></i>
                    </div>
                    <div class="feature-text">
                        <h5>Self check-in</h5>
                        <p>Check in with the lockbox</p>
                    </div>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">
                        <i class="fa-solid fa-calendar-check"></i>
                    </div>
                    <div class="feature-text">
                        <h5>Free cancellation</h5>
                        <p>Cancel before 48 hours of booking</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Booking Card -->
        <div class="booking-card">
            <div class="price-info">
                <span class="price-amount">₹<%= listing.price ? listing.price.toLocaleString("en-IN") : '0' %></span>
                <span class="price-period">/ night</span>
            </div>

            <% if(currentUser && listing.owner._id.equals(currentUser._id)) { %>
            <div class="booking-actions">
                <p class="text-muted text-center mb-3">You own this property</p>
                <div class="action-buttons">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-edit">Edit Listing</a>
                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="flex: 1;">
                        <button type="submit" class="btn btn-delete w-100">Delete</button>
                    </form>
                </div>
            </div>
            <% } else { %>
            <button class="btn-book">Reserve</button>
            <p class="text-center text-muted mt-3 mb-0" style="font-size: 0.9rem;">You won't be charged yet</p>
            <% } %>
        </div>
    </div>

    <!-- Map Section -->
    <% if(listing.geometry && listing.geometry.coordinates) { %>
    <div class="map-section">
        <h3>Where you'll be</h3>
        <div id="map"></div>
        <p class="text-muted mt-3"><%= listing.location %>, <%= listing.country %></p>
    </div>
    <% } %>

    <!-- Reviews Section -->
    <div class="reviews-section">
        <div class="reviews-header">
            <h3>
                <i class="fa-solid fa-star" style="color: #fe424d;"></i>
                <% 
                let avgRating = 0;
                if(listing.reviews && listing.reviews.length > 0) {
                    const sum = listing.reviews.reduce((acc, review) => acc + review.rating, 0);
                    avgRating = (sum / listing.reviews.length).toFixed(1);
                }
                %>
                <%= avgRating > 0 ? avgRating : 'New' %>
            </h3>
            <% if(listing.reviews && listing.reviews.length > 0) { %>
            <div class="reviews-stats">
                · <%= listing.reviews.length %> <%= listing.reviews.length === 1 ? 'review' : 'reviews' %>
            </div>
            <% } %>
        </div>

        <!-- Review Form -->
        <% if(currentUser) { %>
        <div class="review-form-card">
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="rating" class="form-label">Rating</label>
                    <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div class="mb-3">
                    <label for="Comment" class="form-label">Comment</label>
                    <textarea name="review[Comment]" id="Comment" cols="30" rows="4" class="form-control" placeholder="Share your experience..." required></textarea>
                    <div class="invalid-feedback">Please add some comments for review</div>
                </div>
                <button type="submit" class="btn">Submit Review</button>
            </form>
        </div>
        <% } else { %>
        <div class="login-prompt-card">
            <div class="login-prompt-content">
                <i class="fa-solid fa-user-lock"></i>
                <h4>Want to leave a review?</h4>
                <p>Please sign in or create an account to share your experience with this property.</p>
                <div class="login-prompt-actions">
                    <a href="/login" class="btn btn-login">Log In</a>
                    <a href="/signup" class="btn btn-signup">Sign Up</a>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Reviews List -->
        <% if(listing.reviews.length > 0) { %>
        <div class="reviews-grid">
            <% for(review of listing.reviews) { %>
            <div class="review-card">
                <div class="review-header">
                    <div class="review-avatar">
                        <%= review.author.username.charAt(0).toUpperCase() %>
                    </div>
                    <div class="review-author">
                        <h5><%= review.author.username %></h5>
                        <p class="starability-result" data-rating="<%= review.rating %>"></p>
                    </div>
                </div>
                <p class="review-comment"><%= review.comment %></p>
                <% if(currentUser && review.author._id.equals(currentUser._id)) { %>
                <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                    <button type="submit" class="btn btn-delete">Delete Review</button>
                </form>
                <% } %>
            </div>
            <% } %>
        </div>
        <% } %>
    </div>
</div>

<!-- Only load map scripts if geometry exists -->
<% if(listing.geometry && listing.geometry.coordinates) { %>
<script src='https://api.mapbox.com/mapbox-gl-js/v3.0.1/mapbox-gl.js'></script>
<script id="listing-data" type="application/json">
    <%- JSON.stringify({
        title: listing.title,
        location: listing.location,
        country: listing.country,
        geometry: listing.geometry
    }) %>
</script>
<script>
    const mapToken = '<%= process.env.MAP_TOKEN %>';
    const listingData = JSON.parse(document.getElementById('listing-data').textContent);
</script>
<script src="/js/map.js"></script>
<% } %>